<%= form_for [@restaurant, @review] do |r| %>
  <div class="form-group">
    <%= r.label :content %>
    <%= r.text_field :content, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= r.label :rating %>
    <%= r.text_field :rating, class: 'form-control' %>
  </div>

  <%= r.submit class: 'btn btn-primary' %>
<% end %>

<h3>Error!</h3>
<% if @review.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<br><br>

<br><br>
<p><%= link_to "Back to list", restaurants_path %></p>
